---
import { formatPubDate } from "../lib/dates";

interface Props {
  title: string;
  url: string;
  description?: string;
  pubDate: Date;
  published?: boolean;
}
const { title, url, description, pubDate, published } = Astro.props;
---

<li>
  <a href={url}>{title}</a>
  {description ? <p class="description">{description}</p> : null}
  <p class="pub-date">
    {
      published === true ? `Published on ${formatPubDate(pubDate)}` : "Draft"
    }
  </p>
</li>
<style>
  li {
    list-style: "";
  }
  a {
    text-decoration: none;
    margin: 0;
  }

  .description {
    margin-bottom: 0;
    margin-top: 0;
    font-size: 1.25rem;
  }

</style>
